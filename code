#pilihan kondisi cuaca 
kondisi = ("Cerah", "Berawan", "Hujan", "Tidak Diketahui")

informasi_cuaca = [
    (32, 55, "Cerah"),
    (25, 70, "Berawan"),
    (18, 85, "Hujan")
]

#input suhu dan kelembapan
suhu = int(input("Masukkan suhu celcius: "))
kelembapan = int(input("Masukkan kelembapan (%): "))

#logika buat nentuin kondisi cuaca
if suhu > 30 and kelembapan <= 60:
    kondisi = "Cerah"
elif 20 <= suhu <= 30 and 60 <= kelembapan <= 80:
    kondisi = "Berawan"
elif suhu < 20 or kelembapan > 80:
    kondisi = "Hujan"
else:
    kondisi = "Tidak diketahui"

print("Cuaca:", kondisi)

#create untuk nambah data cuaca
informasi_cuaca.append((suhu, kelembapan, kondisi))
print("Data ditambahkan:", informasi_cuaca[-1])

#read untuk melihat data
print("Data pertama:", informasi_cuaca[0])

#update untuk modifikasi data cuaca
informasi_cuaca[0] = (suhu, kelembapan, "Mendung")
print("Data setelah update:", informasi_cuaca[0])

#remove untuk hapus data cuaca
del informasi_cuaca[0]
print("Data pertama dihapus:")
